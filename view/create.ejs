<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
    <body class="container">
        <%- include('./partials/nav.ejs') %>
    
        <form action="/blogs" method="POST" class="mb-5">
            <div class="form-group">
                <label for="title">Title</label>
                <input class="form-control" required type="text" name="title" id="title">
            </div>
            <div class="form-group">
                <label for="snippet">Snippet</label>
                <input class="form-control" required type="text" name="snippet" id="snippet">
            </div>
            <div class="form-group">
                <label for="body">Body</label>
                <textarea class="form-control" required name="body" id="body" style="height:100%" rows="10"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        <%- include('./partials/footer.ejs') %>
    </body>
</html>